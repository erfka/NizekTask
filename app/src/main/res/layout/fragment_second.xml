<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondFragment">

    <LinearLayout
        android:id="@+id/btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.erfka.nizekbutton.NizekButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="80dp"
            android:padding="4dp"
            app:layout_constraintTop_toBottomOf="@id/button_first"
            app:nizek_backgroundColor="#E31919"
            app:nizek_borderColor="@color/black"
            app:nizek_borderWidth="2dp"
            app:nizek_cornerRadius="8dp"
            app:nizek_elevation="12dp"
            app:nizek_icon="@drawable/nizek"
            app:nizek_iconTint="#FFFFFF"
            app:nizek_rippleColor="#0C709B"
            app:nizek_subText="Subtext"
            app:nizek_subTextColor="@color/colorOnBackground"
            app:nizek_subTextSize="16sp"
            app:nizek_text="Text"
            app:nizek_textColor="@color/colorOnBackground"
            app:nizek_textSize="26sp" />

        <com.erfka.nizekbutton.NizekButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="80dp"
            android:padding="4dp"
            app:layout_constraintTop_toBottomOf="@id/button_first"
            app:nizek_backgroundColor="#E31919"
            app:nizek_borderColor="@color/black"
            app:nizek_borderWidth="2dp"
            app:nizek_cornerRadius="8dp"
            app:nizek_elevation="12dp"
            app:nizek_iconTint="#FFFFFF"
            app:nizek_rippleColor="#1B62C7"
            app:nizek_subText="Subtext"
            app:nizek_subTextColor="@color/colorOnBackground"
            app:nizek_subTextSize="16sp"
            app:nizek_text="Text"
            app:nizek_textColor="@color/colorOnBackground"
            app:nizek_textSize="26sp" />

        <com.erfka.nizekbutton.NizekButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="80dp"
            android:padding="4dp"
            app:layout_constraintTop_toBottomOf="@id/button_first"
            app:nizek_backgroundColor="#E31919"
            app:nizek_borderColor="@color/black"
            app:nizek_borderWidth="2dp"
            app:nizek_cornerRadius="8dp"
            app:nizek_elevation="12dp"
            app:nizek_iconTint="#FFFFFF"
            app:nizek_rippleColor="#1551C2"
            app:nizek_text="Text"
            app:nizek_textColor="@color/colorOnBackground"
            app:nizek_textSize="26sp" />

        <com.erfka.nizekbutton.NizekButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="80dp"
            android:padding="4dp"
            app:layout_constraintTop_toBottomOf="@id/button_first"
            app:nizek_backgroundColor="#E31919"
            app:nizek_cornerRadius="40dp"
            app:nizek_iconTint="#FFFFFF"
            app:nizek_rippleColor="#1551C2"
            app:nizek_text="Text"
            app:nizek_textColor="@color/colorOnBackground"
            app:nizek_textSize="26sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textview_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/button_second"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btns" />

    <Button
        android:id="@+id/button_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/previous"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_second" />


</androidx.constraintlayout.widget.ConstraintLayout>