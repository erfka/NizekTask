<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <TextView
        android:id="@+id/textview_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_first_fragment"
        app:layout_constraintBottom_toTopOf="@id/button_first"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_first" />

    <!--
    style="@style/NizekStyle2"
    -->
    <com.erfka.nizekbutton.NizekButton
        android:id="@+id/btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintTop_toBottomOf="@id/button_first"
        app:nizek_cornerRadius="8dp"
        app:nizek_borderColor="@color/black"
        app:nizek_borderWidth="2dp"
        app:nizek_elevation="12dp"
        app:nizek_icon="@drawable/github"
        app:nizek_rippleColor="@color/c1"
        app:nizek_subText="Subtext"
        app:nizek_subTextColor="@color/black"
        app:nizek_subTextSize="16sp"
        app:nizek_text="Text"
        app:nizek_textColor="@color/black"
        app:nizek_textSize="26sp" />


</androidx.constraintlayout.widget.ConstraintLayout>